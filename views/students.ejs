<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Student Dashboard - Manage Students</h1>
    </header>

    <nav>
        <ul>
            <!-- <li><a href="/departments">Manage Departments</a></li>
            <li><a href="/instructors">Manage Instructors</a></li> -->
            <li><a href="/students">Manage Students</a></li>
            <li><a href="/courses">Manage Courses</a></li>
            <li><a href="/enrollments">Manage Enrollments</a></li>
            <li><a href="/viewMarks">View Marks</a></li>
        </ul>
    </nav>

    <main>
        <section>
            <h2>Manage Students</h2>
            <div class="form-container">
                <h3>Add New Student</h3>
                <form action="/students/add" method="POST" id="addStudentForm">
                    <label for="student-name">Student Name:</label>
                    <input type="text" id="student-name" name="name" placeholder="Student Name" required>
                    <button type="submit">Add Student</button>
                </form>
            </div>

            <div class="student-list-container">
                <h3>Existing Students</h3>
                <% if (students.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.name %></td>
                            <td>
                                <form action="/students/delete/<%= student.id %>" method="POST" class="delete-form">
                                    <button class="delete" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                    <p>No students found. Add a new student above.</p>
                <% } %>
            </div>
        </section>
    </main>

    <script src="/scripts_students.js"></script>
    <script src="/server.js"></script>
</body>
</html>
